{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "api/mcp.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/mcp",
      "dest": "/api/mcp"
    },
    {
      "src": "/",
      "dest": "/api/mcp"
    }
  ],
  "functions": {
    "api/mcp.ts": {
      "maxDuration": 30
    }
  }
}
